<div class="card  col-md-5 mx-auto">
   <div class="card-body">
   <form action="/usuarios/consultUser" method="POST">
      <div class="card-body">
         <div class="col-xs-2">
            <label for="email">Email:</label>
            <input type="text" class="form-control" name="email" required >
         </div>
         <div class="col-xs-2">
            <button class="btn btn-info mt-4 float-right" type="submit">Consultar</button>
         </div>
      </div>
         
   </form>
   </div>

</div>


{{#if usuarios}}

