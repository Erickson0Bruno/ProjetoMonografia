
<div class="card  col-md-5 mx-auto">
   <div class="card-body">
   <form action="/usuarios/consultUser" method="POST">
      <div class="card-body">
         <div class="col-xs-2">
            <div style="text-align: center;">
               <h3>Consulta de Usuário</h3>
            </div>
            <div class="form-group">
               <label for="nome">Nome:</label>
               <input type="text" class="form-control" name="nome" >
            </div>
            <div class="form-group">
               <label for="email">Email:</label>
               <input type="text" class="form-control" name="email"  >
            </div>
         </div>
         <div class="col-xs-2">
            <button class="btn btn-info mt-4 float-right" type="submit">Consultar</button>
         </div>
      </div>
         
   </form>
   </div>

</div>


{{#if usuarios}}
<br>
<h2> Lista de Usuários ({{userLengh}})</h2>

   {{#each usuarios}}
   <div class="card  mt-4">
      
      <div class="card-body">
            
            
            <h5>Usuario: {{nome}}</h5><br>
            <small>Email: {{email}}</small><br>
            <a href="/usuarios/exc/{{_id}}">
               <button class="btn btn-danger mt-3"> Deletar</button>
            </a>
         
      </div>  
            
   </div>
   {{else}}
   {{/each}}
</div>
{{/if}}



